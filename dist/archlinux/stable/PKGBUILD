pkgname=sysrss
pkgver=2
pkgrel=1
pkgdesc="Let your system generate a maintenance notification RSS"
arch=('any')
url="https://github.com/maandree/sysrss"
license=('GPL3')
depends=('python>=3' 'util-linux')
provides=('sysrss')
conflicts=('sysrss')
source=(https://github.com/maandree/sysrss/tarball/2)
md5sums=(97074fb7403505e1e494ca810162bee7)

build() {
  cd maandree-sysrss-*
  make -B DESTDIR="$pkgdir/"
}

package() {
  cd maandree-sysrss-*
  make DESTDIR="$pkgdir/" install
}
