pkgname=sysrss
pkgver=1
pkgrel=1
pkgdesc="Let your system generate a maintenance notification RSS"
arch=('any')
url="https://github.com/maandree/sysrss"
license=('GPL3')
depends=('python>=3' 'util-linux')
provides=('sysrss')
conflicts=('sysrss')
source=(https://github.com/maandree/sysrss/tarball/1)
md5sums=(c74a2977f65616ff298b70d49ab57ae0)

build() {
  cd maandree-sysrss-*
  make -B DESTDIR="$pkgdir/"
}

package() {
  cd maandree-sysrss-*
  make DESTDIR="$pkgdir/" install
}
